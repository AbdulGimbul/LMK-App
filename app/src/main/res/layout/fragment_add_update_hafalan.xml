<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ngaji.hafalan.HafalanAddUpdateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:padding="8dp">

        <EditText
            android:id="@+id/edt_hafalan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Surat Hafalan"
            android:inputType="text" />

        <CheckBox
            android:id="@+id/checkbox_important"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mendesak" />

        <TextView
            android:id="@+id/tv_hafalan_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tanggal: " />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_save_hafalan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_check_24" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>